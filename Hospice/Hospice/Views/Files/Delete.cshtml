@model Hospice.Models.FileViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="row">

    <div class="col-xs-12">
        <h1>Resources</h1>
    </div>

    <div class="col-xs-8">
        <div class="panel panel-default">
            <div class="panel-heading">Files Upload, Download<span class="widget-icon-right glyphicon glyphicon-cog"></span></div>

            <div class="row">

                <div class="panel-body">

                    <h2>Delete</h2>

                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <h4>Files</h4>
                        <hr />
                        <dl class="dl-horizontal">

                            <dt>
                                @Html.DisplayNameFor(model => model.FileName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.FileName)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.FileDescription)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.FileDescription)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.MimeType)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.MimeType)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" /> |
                                @Html.ActionLink("Back to List", "Index")
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>