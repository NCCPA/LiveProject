@model Hospice.Models.FileViewModel
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Upload Profile Picture</h4>
            </div>
            <div class="modal-body">

                <h2>Delete</h2>

                <h3>Are you sure you want to delete this?</h3>
                <div>
                    <h4>Files</h4>
                    <hr />
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.FileName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FileName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.FileDescription)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FileDescription)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.MimeType)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MimeType)
                        </dd>

                    </dl>
                    <div class="modal-footer">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Delete" class="btn btn-default" />
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        }
                    </div>
                    </div>
            </div>
        </div>
    </div>
</div>

