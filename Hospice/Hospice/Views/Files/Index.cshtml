@model IEnumerable<Hospice.Models.FileViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">

    <div class="col-xs-12">
        <h1>Resources</h1>
    </div>

    <div class="col-xs-8">
        <div class="panel panel-default">
            <div class="panel-heading">Files Upload, Download<span class="widget-icon-right glyphicon glyphicon-cog"></span></div>

            <div class="row">

                <div class="panel-body">
                    <h2>File List</h2>
                    <h4>Upload New File</h4>
                    <p>
                        @using (Html.BeginForm("Index", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <label for="fileDescription">Description:</label> <input type="text" name="fileDescription" /><br />
                            <input type="file" name="FileUpload1" /><br />
                            <input type="submit" name="Submit" id="Submit" value="Upload" />
                        }
                    </p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FileName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.FileDescription)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FileName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FileDescription)
                                </td>
                                <td>
                                    @Html.ActionLink("Download", "Download", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


